<h1>To-Do List</h1>
<%= link_to "Add New Task", new_task_path %>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= task.title %> - <%= task.completed ? "Completed" : "Incomplete" %>
      <%= link_to "Edit", edit_task_path(task) %> |
      <%= link_to "Delete", task, method: :delete, data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>
